---
import '@fontsource/paytone-one';
import '@fontsource/sora';
import '@fontsource/source-code-pro'
const {id, open} = Astro.props;
---

<div>
    <section class=" bg-white dark:bg-gray-900 border-black">
        <div class="py-8 lg:py-16 px-4 mx-auto max-w-screen-md">
            <h1 class="font-title mb-14 text-7xl tracking-tight text-center text-black dark:text-white">Let's Begin!</h1>
            <form action="#" class="space-y-8">
                <div>
                    <!-- <label for="name" class="font-code block mb-2 text-5xl font-medium text-gray-900 dark:text-gray-300">Name</label> -->
                    <input type="text" id="name" class=" font-code block p-3 w-full text-4xl text-black border-b-2 bg-white placeholder-gray-800 border-b-black" placeholder="What's your name?" required>
                </div>
                <div class="">
                    <!-- <label for="email" class="font-code block mb-2 text-5xl font-medium text-gray-900 dark:text-gray-300">Email</label> -->
                    <input type="email" id="email" class="font-code block p-3 w-full text-4xl text-gray-900 border-b-2 bg-white placeholder-gray-800 border-b-black" placeholder="What's your email?" required>
                </div>
                <div class="sm:col-span-2">
                    <!-- <label for="message" class="font-code block mb-2 text-5xl font-medium text-gray-900 dark:text-gray-400">Your message</label> -->
                    <textarea id="message" rows="6" class="font-code block p-2.5 w-full text-4xl text-gray-900 bg-white placeholder-gray-800 rounded-lg shadow-sm border-black border-2 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="How can we help?" required></textarea>
                </div>
                <button type="submit" class="p-6 text-6xl font-title text-center text-black border-4 border-black rounded-[4rem] hover:bg-black hover:border-transparent hover:text-white ">Send message</button>
            </form>
        </div>
      </section>
</div>